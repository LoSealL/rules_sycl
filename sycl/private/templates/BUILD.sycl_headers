filegroup(
    name = "%{component_name}_header_files",
    srcs = glob(
        ["%{component_name}/compiler/%{version}/include/**"],
        allow_empty = False,
    ),
    visibility = ["//visibility:private"],
)

cc_library(
    name = "%{component_name}_headers",
    hdrs = [":%{component_name}_header_files"],
    includes = ["%{component_name}/compiler/%{version}/include"],
)
